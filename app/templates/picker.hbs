{{outlet}}
{{nav-bar}}

<div class="navOffset">
</div>
{{#unless allowPicks}}
<div class = "row">
  <div class = "col-sm-4 col-sm-offset-4 paragraph2">
    <a style="color: white">
      We are not currently accepting picks. Come back on selection Sunday!
    </a>
  </div>
</div>
{{else}}
  {{#unless lastScreen}}
  {{#unless validKey}}
    NOTE: THIS PAGE IS COMPLETELY UNSTYLED. TODO: Style this page<br>
    Name: {{input value=model.name}}<br>
    Access Key: {{input value=model.accessKey}}<br><br>
    <button {{action "enterKey"}}>Make Picks</button>
    {{#if nameError}}
      <p style="color: RED">Please enter a valid name.</p>
    {{else if keyError}}
      <p style="color: RED">The access key entered is invalid.</p>
    {{/if}}
  {{else}}
    {{#if noneSelected}}
      {{#unless ACompleted}}
        <br><br><button {{action "selectA"}}>{{AName}} picks</button>
      {{/unless}}
      {{#unless BCompleted}}
        <br><br><button {{action "selectB"}}>{{BName}} picks</button>
      {{/unless}}
      {{#unless CCompleted}}
        <br><br><button {{action "selectC"}}>{{CName}} picks</button>
      {{/unless}}
      {{#unless DCompleted}}
        <br><br><button {{action "selectD"}}>{{DName}} picks</button>
      {{/unless}}
    {{else if ASelected}}
      {{region-picker model=model region="A" regionName=AName teamNameMap=teamNameMap teamCodeMap=teamCodeMap action="cont"}}
    {{else if BSelected}}
      {{region-picker model=model region="B" regionName=BName teamNameMap=teamNameMap teamCodeMap=teamCodeMap action="cont"}}
    {{else if CSelected}}
      {{region-picker model=model region="C" regionName=CName teamNameMap=teamNameMap teamCodeMap=teamCodeMap action="cont"}}
    {{else if DSelected}}
      {{region-picker model=model region="D" regionName=DName teamNameMap=teamNameMap teamCodeMap=teamCodeMap action="cont"}}
    {{else if FSelected}}  
      <br><br>
      <div class="row">
        <div class = "col-md-3" style="text-align: center" {{action "pick"}}>
          <select id = "F1">
            <option>--Select Team--</option>
            <option>{{FA}}</option>
            <option>{{FB}}</option>
          </select>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3"></div>
        <div class = "col-md-3" style="text-align: center" {{action "pick"}}>
          <select id = "F3">
            <option>--Select Team--</option>
            <option>{{FW1}}</option>
            <option>{{FW2}}</option>
          </select>
        </div>
      </div>
      <div class="row">
        <div class = "col-md-3" style="text-align: center" {{action "pick"}}>
          <select id = "F2">
            <option>--Select Team--</option>
            <option>{{FC}}</option>
            <option>{{FD}}</option>
          </select>
        </div>
      </div>      
      <br><br>
      <button {{action "cont2"}}>Continue</button>
      {{#if failure}}
	<p style="color: RED">Make sure that you enter every pick</p>
      {{/if}}
    {{/if}}
  {{/unless}}
  {{else unless done}}
    Goodie Picks:<br>
    NCAA Women's Champ: {{input value=model.pickG5}}<br>
    NIT champ: {{input value=model.pickG6}}<br>
    Biggest first round blowout: {{input value=model.pickG7}}<br>
    First conference out:
    <select id = "G8">
      <option>--Select Conference--</option>
      <option>Big 10</option>
      <option>Big 12</option>
      <option>SEC</option>
      <option>PAC-10</option>
      <option>ACC</option>
    </select>
    <br>
    Dark horse champion: {{input value=model.pickG9}}<br>
    <br> WARNING: Submitting your picks cannot be undone! <br>
    <button {{action "submit"}}>Submit</button>
    {{#if failure2}}
      <p style="color: red">Please make sure you have selected every goodie pick</p>
    {{/if}}
  {{else}}
    Your picks have been submited! Good luck.
  {{/unless}}
{{/unless}}
